<%= stylesheet_link_tag "sign_up" %>
<link href="https://fonts.googleapis.com/css?family=Ranga" rel="stylesheet">

<h2 class="header">Join Maximus</h2>

<div class="form">
	<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|%>
		<table>		
			<tr>
				<td><%= f.label :Email %></td>
				<td><%= f.text_field :email %></td>
			</tr>
			<tr>
				<td><%= f.label :Username %></td>
				<td><%= f.text_field :username %></td>
			</tr>
			<tr>
				<td><%= f.label :Password %></td>
				<td><%= f.password_field :password, autocomplete: "off" %></td>
			</tr>
			<tr>
				<td><%= f.label :password_confirmation %></td>
				<td><%= f.password_field :password_confirmation, autocomplete: "off" %></td>
			
			</tr>
			<tr>
				<td><%= f.label :Status %></td>
				<td><%= f.text_field :status %></td>
			</tr>
			<tr>
				<td><%= f.label :Profilbild %></td>
				<td><%= f.file_field :avatar %></td>
			</tr>
		</table>
		<%= f.submit 'Register' %>
	<% end %>
</div>