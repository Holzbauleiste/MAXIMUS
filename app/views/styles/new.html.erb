<head>
<title>Neues Bild hochladen</title>
<style>

body {
  background-color: #66ccff;

}

</style>
</head>
<body>
<center>
<%= form_for :styles, url: styles_path, html: { multipart: true } do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <%= f.file_field :pic %>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
</center>
</body>